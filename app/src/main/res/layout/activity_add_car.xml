<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/imgAddCar"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#323539"
        android:paddingHorizontal="10dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="-15dp"
            android:gravity="center"
            android:padding="20dp"
            android:paddingTop="20dp"
            android:text="Thêm mới lớp"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/addIdCar"
            android:layout_width="397dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnAddImageCar"
            android:layout_marginTop="25dp"
            android:ems="10"
            android:hint="   Nhập ID"
            android:inputType="textPersonName"
            android:textColor="@color/white"
            android:textColorHint="#D3BCBC" />

        <EditText
            android:id="@+id/addNameCar"
            android:layout_width="397dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/addIdCar"
            android:layout_marginTop="25dp"
            android:layout_toEndOf="@+id/textView3"
            android:ems="10"
            android:hint="Nhập tên xe"
            android:inputType="textPersonName"
            android:padding="13dp"
            android:textColor="@color/white"
            android:textColorHint="#D3BCBC" />

        <EditText
            android:id="@+id/addLoaiXe"
            android:layout_width="397dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/addNameCar"
            android:layout_marginTop="28dp"
            android:layout_toEndOf="@+id/textView3"
            android:ems="10"
            android:hint="Nhập loại xe"
            android:inputType="textPersonName"
            android:padding="13dp"
            android:textColor="@color/white"
            android:textColorHint="#D3BCBC" />

        <EditText
            android:id="@+id/addNgayNhap"
            android:layout_width="397dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/addLoaiXe"
            android:layout_marginTop="11dp"
            android:layout_toEndOf="@+id/textView3"
            android:ems="10"
            android:hint="Nhập ngày nhập"
            android:inputType="textPersonName"
            android:padding="13dp"
            android:textColor="@color/white"
            android:textColorHint="#D3BCBC" />

        <EditText
            android:id="@+id/addGhiChu"
            android:layout_width="397dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/addNgayNhap"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:hint="Ghi chú"
            android:inputType="textPersonName"
            android:padding="13dp"
            android:textColor="@color/white"
            android:textColorHint="#D8B9B9" />

        <Button
            android:id="@+id/btnXoaTrangAddCar"
            android:background="@drawable/btn_blue_light"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/addGhiChu"
            android:layout_alignParentStart="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="37dp"
            android:text="Xóa trắng" />

        <Button
            android:id="@+id/btnAddCarDialog"
            android:background="@drawable/btn_blue_light"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/addGhiChu"
            android:layout_marginStart="24dp"
            android:layout_marginTop="39dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="20dp"
            android:layout_toEndOf="@+id/btnXoaTrangAddCar"
            android:text="Thêm xe" />

        <ImageButton
            android:id="@+id/btnAddImageCar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/textView2"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="160dp"
            android:layout_marginTop="186dp"
            android:layout_marginEnd="161dp"
            android:background="@null"
            app:srcCompat="@android:drawable/ic_menu_add" />

        <ImageView
            android:id="@+id/imgLoadCar"
            android:layout_width="140dp"
            android:layout_height="150dp"
            android:layout_below="@+id/textView2"
            android:layout_alignParentStart="true"
            android:layout_marginStart="132dp"
            android:layout_marginTop="24dp"
            tools:srcCompat="@tools:sample/avatars" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>